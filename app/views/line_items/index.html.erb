<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
</head>
<boby>
<h1>Listing Line Items</h1>

<table style="overflow:visible">
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th>Book Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @line_items.each do |line_item| %>
    <% unless line_item.quantity == 0 %>
        <tr>
          <td><%= line_item.product_id %></td>
          <td><%= line_item.cart_id %></td>
          <td><%= "#{line_item.product.title}" %></td>
          <td><%= line_item.quantity %></td>
          <td><%= line_item.price*line_item.quantity %></td>
          <td><%= link_to 'Show', line_item %></td>
          <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
          <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

    <% end
      end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line item', new_line_item_path %>
<%= link_to 'Back',  "/store/index"%>
</boby>