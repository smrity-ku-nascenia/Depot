<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog<% if session[:counter]>5 then %>
      || User has accessed index action <%= session[:counter] %> times
  <% end %> </h1>
<% @products.each do |product| %>
    <div class="entry">
      <%= link_to(image_tag(product.image_url, :class => 'list_image'), line_items_path(:product_id => product)) %>
      <h3><%= product.title %></h3>
      <%=sanitize product.description %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price, :unit => "Tk. ") %></span>
        <%= button_to "Add to Cart", line_items_path(:product_id => product) %>
      </div>
    </div><br><br>
<% end %>
