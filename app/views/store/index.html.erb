<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %><% if session[:counter]>5 then %>
      || <%= t('.show_message1') %> <%= session[:counter] %> <%= t('.show_message2') %>
  <% end %> </h1>
<% @products.each do |product| %>
    <div class="entry">
      <%= link_to(image_tag(product.image_url, :class => 'list_image'), line_items_path(:product_id => product)) %>
      <h3><%= product.title %></h3>
      <%=sanitize product.description %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to t('.add_html'), line_items_path(:product_id => product), :remote => true %>
      </div>
    </div><br><br>
<% end %>
